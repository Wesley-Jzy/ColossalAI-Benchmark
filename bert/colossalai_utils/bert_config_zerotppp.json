{
    "method": "colossalai",
    "model": {
        "type": "bert_large"
    },
    "hyperparameter": {
        "batch_size": 16,
        "num_epochs": 4,
        "steps_per_epoch": 10
    },
    "gradient_clipping": 1.0,
    "zero": {
        "model_config": {
            "tensor_placement_policy": "cuda"
        },
        "optimizer_config": {
            "initial_scale": 256,
            "min_scale": 1,
            "growth_factor": 2.0,
            "backoff_factor": 0.5,
            "growth_interval": 1000
        }
    },
    "parallel": {
        "pipeline":1,
        "tensor": {
            "mode": "2.5d",
            "size": 8,
            "depth": 2
        }
    },
    "use_mem_monitor": true
}
